<Application x:Class="ItLabs.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ItLabs"
             xmlns:utils ="clr-namespace:ItLabs.Utilities"
             xmlns:vm ="clr-namespace:ItLabs.ViewModels"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Styles/FontResources.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/BorderStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <utils:ViewModelLocator x:Key="Locator"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>