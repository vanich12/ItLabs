<UserControl x:Class="ItLabs.UserControls.ErrorMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItLabs.UserControls"
               xmlns:conv="clr-namespace:ItLabs.Converters"
             mc:Ignorable="d"
             x:Name="Err">
    <UserControl.Resources>
        <conv:ValidToVisibilityConverter x:Key="ValidToVisibilityConverter"/>
    </UserControl.Resources>
    <TextBlock Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                   Visibility="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource ValidToVisibilityConverter}}"
                   Foreground="Red" 
                   FontSize="12"
                   FontFamily="MontserratLight"
                   />
</UserControl>
